<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_storage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codevscolor.firebasedemo.storage.StorageActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:indeterminate="false"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:id="@+id/progressBar_storage"
        android:layout_alignParentTop="true" />

    <Button
        android:text="Upload"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:onClick="upload"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="183dp"
        android:id="@+id/button_upload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="53dp" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="376dp"
        android:onClick="delete"
        android:id="@+id/button_delete"
        android:layout_alignBottom="@+id/button_download"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:text="Download"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:id="@+id/button_download"
        android:onClick="download"
        app:layout_constraintTop_toBottomOf="@+id/button_upload"
        app:layout_constraintRight_toRightOf="@+id/button_upload"
        android:layout_alignTop="@+id/button_upload"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/sample_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:layout_below="@id/progressBar_storage"
        android:id="@+id/imageView_storage" />


</RelativeLayout>
